public trigger AccountTrigger on Account(after insert, after update){
 Set<id> newSet = new Set<id>(); 

for(Account acc:Trigger.new){
    newSet.add(acc.Id);
  }

Map<Id, Opportunity> newMap = new Map<Id, Opportunity>();
for(AggregateResult sr:[Select Id, name, max(Amount) maxAmount, accountId from Opportunity where accountId 
IN: newSet groupby accountId]){


Decimal maxAmount = (Decimal) sr.get('maxAmount');
String  recordId = (Id) sr.get('accountId');
Opportunity opp =[Select id , name, amount, accId from Opportunity where accId =:recordId AND amount =maxAmount limit1];

newMap.put(accountId, opp.Name);

}
List<Account> newAccountList = new List<Account>();
for(Account newAccount: newMap.keyset()){
Account acc = new Account(newAccount.Id);
acc.Description = 'Updated Description'+newMap.get(newAccount.Id).Name;
newAccountList.add(acc);}

if(!newAccountList.isEmpty()){
     update newAccountList;
}



}

